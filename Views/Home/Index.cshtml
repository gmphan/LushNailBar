@model LushNailBar.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Lush Nail Bar";
}

<!-- Masthead-->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">Lush Nail Bar <br/> Welcomes You!</h1>
                @* <hr class="divider my-4" /> *@
                <br/><br/><br/>
            </div>
            <div class="col-lg-8 align-self-baseline">
                @* <p class="text-white-75 font-weight-light mb-5">Start Bootstrap can help you build better websites using the Bootstrap framework! Just download a theme and start customizing, no strings attached!</p> *@
                <a class="fa fa-facebook" href="https://www.facebook.com/lushnails128Mc/" target="_blank" title="Facebook"></a>
                <a class="fa fa-yelp" href="https://www.yelp.com/biz/lush-nail-bar-mcdonough" target="_blank" title="Yelp"></a>
                <a class="fa fa-map-marker" href="https://www.google.com/maps/place/Lush+Nail+Bar/@@33.4251738,-84.1894976,15z/data=!4m5!3m4!1s0x0:0x3db22615134730bf!8m2!3d33.4251738!4d-84.1894976" target="_blank" title="Location"></a>
                <br/><br/><br/><br/>
                <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">Services and Hours</a>
            </div>
        </div>
    </div>
</header>
<!-- About-->
<section class="page-section bg-primary" id="about">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white mt-0">Come to Us...</h2>
                <hr class="divider light my-4" />
                <p class="text-white-50 mb-4">
                  Located conveniently in Mc Donough, Georgia 30253- Lush Nail Bar is the ideal destination for you to immerse yourself in luxury environment. 
                  Come to us, customers can believe in diversified services provided along with the best qualified products by professional and talented technicians. Your beauty will be 
                  rejuvenated thanks for nails with simple floral but beautiful and charming patterns. Your hands and feet are also taken care of by suitable therapy method at competitive prices.<br/>
                  Especially, understanding that customers always appreciate the cleanliness and safety when coming a nail salon, we ensure beautiful and healthy nails for each client. 
                  The instrument after using is sanitized carefully and wrapped tightly to protect it from infection.
                </p>
                
                <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">Services</a>
            </div>
        </div>
    </div>
</section>

@* Services and Prices *@
<section class="page-section" id="services">    
    <div class="container ">
        <h2 class="text-center mt-0">At Your Service</h2>
        <hr class="divider my-4" />
        <div class="row ">
            @if(Model.ServiceLookup.Count() > 0)
            {
                <div id="price-list-nav" class="col-lg-4 text-center ">  
                    <ul id="service-type-list">
                        @foreach (IGrouping<string, Service> services in Model.ServiceLookup)
                        {                              
                            if(Model.ServiceLookup.First() == services)
                            {
                                <li class="active">
                                    <a href="#@services.Key" class="btn btn-primary service-link" role="button">@services.Key</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="#@services.Key" class="btn btn-primary service-link" role="button">@services.Key</a>
                                </li>
                            }
                        }    
                    </ul>                                                                       
                </div>
                <div id="price-list-service" class="col-lg-8">                    
                    @foreach (IGrouping<string, Service> services in Model.ServiceLookup)
                    {   
                        if(Model.ServiceLookup.First() == services)
                        {
                            <table id="@services.Key" class="table table-striped table-dark">  
                                <thead>
                                    <tr>
                                    <th scope="col">Services</th>
                                    <th scope="col">Prices</th>
                                    </tr>
                                </thead>                          
                                <tbody>  
                                    @foreach (var items in services)
                                    {
                                        <tr>
                                            <td style="width: 90%">@items.ServiceName</td>
                                            <td style="width: 10%">$@items.ServicePrice</td>
                                        </tr>   
                                    }
                                </tbody>
                            </table>             
                        }
                        else
                        {
                            <table id="@services.Key" class="table table-striped table-dark hidden">  
                                <thead>
                                    <tr>
                                    <th scope="col">Services</th>
                                    <th scope="col">Prices</th>
                                    </tr>
                                </thead>                          
                                <tbody>  
                                    @foreach (var items in services)
                                    {
                                        <tr>
                                            <td style="width: 90%">@items.ServiceName</td>
                                            <td style="width: 10%">$@items.ServicePrice</td>
                                        </tr>   
                                    }
                                </tbody>
                            </table>             
                        }
                    }                        
                </div>
            }
        </div>
    </div>
</section>